<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:id="@+id/settings_header"
        android:contentDescription="@string/settings_header_desc"
        android:background="@drawable/settings_header"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/settings_notifications_text"
        android:text="@string/settings_txt_notifications"
        android:textSize="25sp"
        android:layout_below="@id/settings_header"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"/>
</RelativeLayout>